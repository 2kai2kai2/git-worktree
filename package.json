{
    "name": "worktrees",
    "displayName": "Git Worktree View",
    "publisher": "kaih2o",
    "description": "Integrated git worktree control",
    "version": "0.0.3",
    "author": {
        "name": "2kai2kai2"
    },
    "license": "GPL-3.0-only",
    "readme": "README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/2kai2kai2/git-worktree"
    },
    "sponsor": {
        "url": "https://patreon.com/2kai2kai2"
    },
    "icon": "images/icon.png",
    "keywords": [
        "git",
        "worktree",
        "branch",
        "scm",
        "source control"
    ],   
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "Other"
    ],
    "extensionDependencies": [
        "vscode.git"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "git-worktree.open-worktree-new-window",
                "title": "Worktrees: Open git worktree in new window",
                "icon": "$(empty-window)"
            },
            {
                "command": "git-worktree.add-new-worktree",
                "title": "Worktrees: Create new worktree",
                "icon": "$(add)"
            },
            {
                "command": "git-worktree.remove-worktree",
                "title": "Worktrees: Remove worktree",
                "icon": "$(trash)"
            },
            {
                "command": "git-worktree.add-pinned-repository",
                "title": "Worktrees: Pin repository",
                "icon": "$(pin)"
            },
            {
                "command": "git-worktree.remove-pinned-repository",
                "title": "Worktrees: Un-pin repository",
                "icon": "$(pinned)"
            },
            {
                "command": "git-worktree.remove-all-pins",
                "title": "Worktrees: Remove all pins"
            },
            {
                "command": "git-worktree.fetch-repository",
                "title": "Worktrees: Fetch",
                "icon": "$(repo-sync)"
            }
        ],
        "views": {
            "scm": [
                {
                    "id": "git-worktrees",
                    "name": "Git Worktrees",
                    "type": "tree"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "git-worktree.open-worktree-new-window",
                    "when": "viewItem == git-worktree:worktree",
                    "group": "inline"
                },
                {
                    "command": "git-worktree.add-new-worktree",
                    "when": "viewItem == git-worktree:repo-pinned || viewItem == git-worktree:repo-unpinned",
                    "group": "inline"
                },
                {
                    "command": "git-worktree.remove-worktree",
                    "when": "viewItem == git-worktree:worktree"
                },
                {
                    "command": "git-worktree.add-pinned-repository",
                    "when": "viewItem == git-worktree:repo-unpinned",
                    "group": "inline"
                },
                {
                    "command": "git-worktree.remove-pinned-repository",
                    "when": "viewItem == git-worktree:repo-pinned",
                    "group": "inline"
                },
                {
                    "command": "git-worktree.fetch-repository",
                    "when": "viewItem == git-worktree:repo-pinned || viewItem == git-worktree:repo-unpinned",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.87.0",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vscode/test-cli": "^0.0.6",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.56.0",
        "prettier": "^3.2.5",
        "typescript": "^5.3.3"
    }
}
